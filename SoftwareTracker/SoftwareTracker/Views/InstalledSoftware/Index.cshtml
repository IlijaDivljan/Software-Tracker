@model PagedList.IPagedList<EvidencijaSoftvera_IlijaDivljan.Models.InstalledSoftware>

@{
    ViewBag.Title = "Index";
}

<h2>List Of Installed Software</h2>

<p>
    @Html.ActionLink("Register New", "Create")
</p>

@using (Html.BeginForm("Index", "InstalledSoftware", null, FormMethod.Get, new { data_es_target = "#listInstalledSoftware", data_es_ajax = "true" }))
{
    <div class="row">
        <div class="col-lg-6">
            <div class="input-group">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-filter"></i></button>
                </span>
                @Html.DropDownList("SelectedComputer", null, "All", new { @class = "form-control", placeholder="Filter for computer.."})
                @*<input type="search" name="searchTerm" class="form-control" placeholder="Search for name..." data-es-autocomplete="@Url.Action("Autocomplete")">*@
            </div>
        </div>
    </div>
}
<br/>

@Html.Partial("_InstalledSoftware", Model)