@model IPagedList<EvidencijaSoftvera_IlijaDivljan.Models.InstalledSoftware>


<div id="listReports">
    @foreach (var item in Model)
    {
        <br />
        <div class="row">

            <div class="com-md-6">
                <h4 style="display: inline; margin-left: 15px;">@item.Software.Name</h4>
            </div>
            <div class="col-md-3 col-sm-4">
                <p style="margin: 0 0 3px"><span style="font-style: oblique">Category:</span>&nbsp; &nbsp; &nbsp;@item.Software.Category</p>
            </div>
            <div class="col-md-3 col-sm-4">
                <p style="margin: 0 0 3px"><span style="font-style: oblique">Manufacturer:</span>&nbsp; &nbsp;@item.Software.Manufacturer</p>
            </div>
            <div class="col-md-4 col-sm-4">
                <p style="margin: 0 0 3px"><span style="font-style: oblique">License:</span>&nbsp; &nbsp;@item.Software.License</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 col-sm-4">
                <p style="margin: 0 0 3px;"><span style="font-style: oblique">Computer:</span>&nbsp; &nbsp; &nbsp;@item.Computer.Name</p>
            </div>
            <div class="col-md-3 col-sm-4">
                <p style="margin: 0 0 3px"><span style="font-style: oblique">User:</span>&nbsp; &nbsp; &nbsp;@item.User.FullName</p>
            </div>
            <div class="col-md-4 col-sm-4">
                <p style="margin: 0 0 3px"><span style="font-style: oblique">Record date:</span>&nbsp; &nbsp; &nbsp; @item.RecordDate.Date.ToString("dd-MM-yy")</p>
            </div>
        </div>
        @Html.ActionLink("Details", "Details", new { id = item.InstalledSoftwareId }, new { @class = "label label-info" })
        <hr />

    }

    <div class="pagedList" data-es-target="#listReports">
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
        @Html.PagedListPager(Model, page => @Url.Action("Index", new { page }), PagedListRenderOptions.PageNumbersOnly)
    </div>
</div>
