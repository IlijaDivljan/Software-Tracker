@using Microsoft.AspNet.Identity
@model EvidencijaSoftvera_IlijaDivljan.Models.InstalledSoftware

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>
@if (Model.ApplicationUserId != User.Identity.GetUserId() && !User.IsInRole("Admin"))
{
    <p class="alert alert-danger">You are not authorized to delete other Users records.</p>
    <br/>
    @Html.ActionLink("Back to List", "Index", new { selectedComputer = Session["selectedComputer"] })
}
else
{
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Installed Software</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Computer
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Computer.Name)
            </dd>

            <dt>
                Software
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Software.Name)
            </dd>

            <dt>
                User
            </dt>

            <dd>
                @Html.DisplayFor(model => model.User.FullName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.RecordDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.RecordDate)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Back to List", "Index", new { selectedComputer = Session["selectedComputer"] })
            </div>
        }
    </div>
}
